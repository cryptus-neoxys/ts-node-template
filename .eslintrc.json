{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": [
      1,
      {
        "endOfLine": "lf",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5"
      }
    ],
    "no-console": 0
  }
}
